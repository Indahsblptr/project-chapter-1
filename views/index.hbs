                                {{/if}}
                            </div>
                            {{#if isLogin}}
                                <div class="btn-group">
                                    <a href="/update-project/{{this.id}}" class="btn-edit">edit</a>
                                    <a href="/project-delete/{{this.id}}" class="btn-delete">delete</a>
                                </div>
                            {{/if}}
