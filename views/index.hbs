                    {{#each projects}}
                    
                        <div class="project-post">
                          
                            <div class="project-image">
                                <img src="/public/assets/photo.jpg" alt="img">
                            </div>
                            <div class="project-header">
                                <h4>
                                    <a href="/projectdetail/{{id}}">{{this.nameproject}}</a>
                                </h4>
                                <span>{{this.time}}</span>
                            </div>
                            <p>
                                {{this.description}}
                            </p>

                            {{!-- icon --}}
                            <div class="project-content-logo">
